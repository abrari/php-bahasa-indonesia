<?phpid

kelas Contoh {
    // static variable
    variabel publik statis $c = 0;

    fungsi publik __konstruktor() {
        // self -> diri :)
        diri::$c += 1;
    }

    // static method
    fungsi publik statis test() {
        kembalikan "nilai c = " . diri::$c;
    }
}

cetak Contoh::$c . "\n";
$x = Contoh baru; // atau: buat Contoh;

cetak Contoh::test() . "\n";
